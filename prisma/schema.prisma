// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id      Int @id @default(autoincrement())
  nome    String
  email   String @unique
  senha   String
  compras Compra[]
}

model Produto {
  codigoDoProduto String @id
  nome            String
  valor           Decimal
  itemDoPedido    ItemDaCompra[]
}

model Compra {
  id              Int @id @default(autoincrement())
  comprador       Usuario @relation(fields: [compradorId], references: [id])
  compradorId     Int
	itens           ItemDaCompra[]
  total           Decimal
}

model ItemDaCompra {
  id              Int @id @default(autoincrement())
  produto         Produto @relation(fields: [codigoDoProduto], references: [codigoDoProduto])
  codigoDoProduto String
	quantidade      Int
	preco           Decimal
  compra          Compra @relation(fields: [compraId], references: [id], onDelete: Cascade)
  compraId        Int
}
